<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/length_10dp"
        android:paddingRight="@dimen/length_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="memo by"
            android:textAllCaps="true"
            android:textColor="#999999"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/text_16sp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/reset_filter"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/length_25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/length_20dp"
            android:background="@drawable/grey_stroke_layout"
            android:elevation="0.5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/length_10dp"
            android:paddingTop="2dp"
            android:paddingRight="@dimen/length_10dp"
            android:paddingBottom="2dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_reset" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="@dimen/length_5dp"
                android:text="Reset"
                android:textColor="#999999" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filter_item_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="@dimen/length_10dp"
        android:layout_marginTop="@dimen/length_5dp"
        android:layout_marginLeft="@dimen/length_5dp"
        android:layout_marginRight="@dimen/length_5dp"/>

</LinearLayout>