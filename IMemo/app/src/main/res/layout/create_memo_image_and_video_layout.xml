<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/length_10dp"
        android:paddingBottom="@dimen/length_5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/length_10dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/create_memo_resource_imageView"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:scaleType="centerCrop"
                android:src="@drawable/google_icon"
                app:riv_corner_radius="@dimen/length_5dp" />

            <View
                android:id="@+id/blackLayout"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:alpha="0.6"
                android:background="@drawable/shape_corner"
                android:backgroundTint="@color/black" />

            <ImageView
                android:id="@+id/playVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play_video" />
        </RelativeLayout>


        <TextView
            android:layout_weight="1"
            android:id="@+id/create_memo_resource_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/length_10dp"
            android:fontFamily="@font/roboto_regular"
            android:text="file_name.pdf"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16sp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/create_memo_remove_resource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove"
            android:layout_marginLeft="@dimen/length_20dp"
            android:layout_marginRight="@dimen/length_10dp"
            app:tint="#999999" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/line"
        android:layout_marginTop="@dimen/length_5dp"/>
</LinearLayout>
